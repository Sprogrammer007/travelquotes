<table border="0" cellspacing="0" cellpadding="0">

  <thead>
    <tr>
      <th class="col col-rate">Rate</th>
      <th class="col col-rate_type">Rate Type</th>
      <th class="col col-sum_insured">Sum Insured</th>
      <th class="col col-effective_date">Effective Date</th>
      <th class="col col-status">Status</th>
      <th class="col col-status"></th>

    </tr>
  </thead>

  <tbody>
    <% rates.each_with_index do |r, i| %>
      <tr class="<%= i.even? ? "even" : " odd" %>">
        <td class="col"><%= r.rate %></td>
        <td class="col"><%= r.rate_type %></td>
        <td class="col"><%= r.sum_insured %></td>
        <td class="col"><%= r.effective_date.strftime("%d, %m, %Y") %></td>
        <td class="col">
          <span class="status_tag <%= r.status.downcase %>"><%= r.status %></span>
        </td>
        <% if r.status == "Current" %>
          <td class="col">
            <%= link_to_add_fields "Add Future Rate", :add_future, r %>
          </td>
        <% else %>
          <td class="col">
            <%= link_to "Remove Rate", admin_rate_path(r), method: :delete, data: {confirm: I18n.t('active_admin.are_you_sure')} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
