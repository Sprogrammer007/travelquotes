<div class="row">

  <div class="col-lg-3">
    <%= render 'result_sidebar', q: @quote  %>
  </div>

  <div class="col-lg-9 quotes">  
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li class="active">
        <%= link_to "#{@quote.traveler_type} Policies", "##{@quote.traveler_type.downcase}", data: {toggle: "tab"} %>
      </li>
      <% if @quote.traveler_type == "Couple" %>
        <li><%= link_to "Traveler #1", "#traveler1", data: {toggle: "tab"} %></li>
        <li><%= link_to "Traveler #2", "#traveler2", data: {toggle: "tab"} %></li>
      <% end %>
      <li><a href="#compare" data-toggle="tab">Compare Policies</a></li>
    </ul>
   

    <!-- Tab panes -->
    <div class="tab-content">
      <% if @quote.traveler_type == "Single" %>
        <div class="tab-pane fade in active" id="<%= @quote.traveler_type.downcase %>">
          <%= render 'result_list', quote: @quote, results: @quote.results %>
          <h2>Filter Results</h2>
           <%= render 'result_list', quote: @quote, results: @quote.filtered_results %>
        </div>
      <% elsif @quote.traveler_type == "Couple" %>
        <div class="tab-pane fade in active" id="<%= @quote.traveler_type.downcase %>">
          <%= render 'result_list', quote: @quote, results: @quote.results["Couple"] %>
        </div>
        <div class="tab-pane fade" id="traveler1">
          <%= render 'result_list', quote: @quote, results: @quote.results["Traveler #1"] %>
        </div>
        <div class="tab-pane fade" id="traveler2">
          <%= render 'result_list', quote: @quote, results: @quote.results["Traveler #2"] %>
        </div>
      <% end %>
      <div class="tab-pane fade" id="compare"></div>
    </div>
  </div>
</div>

