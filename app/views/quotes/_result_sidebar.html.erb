<aside>
  <div class="row side_bar_widget">
    <div class="title">
        <p>Your Quote</p>
    </div>

      <div class="col-sm-6">
        <p>Departure Date:</p>
        <p>Return Date:</p>
        <p>Trip Cost:</p>
        <p>Traveler Age:</p>
      </div>
      <div class="col-sm-6">
        <p><%= q.leave_home.strftime("%d, %m, %Y") %></p>
        <p><%= q.return_home.strftime("%d, %m, %Y") %></p>
        <p><%= q.trip_cost %></p>
        <p><%= [q.ages["Adult"], q.ages["Dependent"]].flatten.join(", ") %></p>
      </div>
  </div>

  <div class="row side_bar_widget">
    <div class="title">
        <p>Your Current Filter</p>
    </div>
    <div class="current_filters">
    <% if q.product_filters.any? %>
      <ul>
        <% q.product_filters.each do |filter| %>
          <li>
          <span class="filter"> <%= filter.name  %> <%= link_to "x", "#"%></span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No Filters Selected</p>
    <% end %>
    </div>
  </div>
  <div class="row side_bar_widget">
    <div class="title">
        <p>Select Filter</p>
    </div>
    <div class="filter_selections clearfix">
      <%= form_tag url_for(:controller => 'quotes', :action => 'apply_filters') do -%>
        <%= hidden_field_tag "quote_id", q.id %>
        <% Quote.getFilters.each do |k, v| %>
          <h5 data-toggle="collapse"  href="#selection_<%= "#{k.gsub("&", "AND").gsub(" ", "_").downcase}" %>" class="collapsible collapsed arrow-black"> <%= "#{k}" %></h5>

          <div id="selection_<%= "#{k.gsub("&", "AND").gsub(" ", "_").downcase}" %>" class="panel-collapse collapse">
          <ul>
            <% v.each do |filter| %>
              <li>

              <%= check_box_tag "filters[][product_filter_id]", filter.id, nil, id: "filter_#{filter.id}" %>
              <%= label_tag "filter_#{filter.id}", "#{filter.name}" %>
              </li>
            <% end %>
          </ul>
          </div>
        <% end %>
        <%= submit_tag "Apply Filters", class: "filter_button btn-sm btn-info pull-right",  data: {:"loading-text" => "Loading..."} %>
      <% end %>
    </div>

  </div>
</aside>