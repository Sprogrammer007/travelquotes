
<div class="col-sm-6 member_fields_group">
  <%= f.hidden_field :member_type,  :value => "Adult"  %>
  <div class="form-group row">
    <%= f.label :gender, "Gender of the Traveler?", class: "col-sm-5 control-label" %>      
    <div class="col-sm-7">
      <%= f.select(:gender, options_for_select(["Male", "Female"]), {}, class: "form-control" )%>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :gender, "Birthday of the Traveler?", class: "col-sm-5 control-label" %>
    <div class="col-sm-7">
      <%= f.text_field :birthday, class: "form-control", readonly: true  %>
    </div>
  </div>
</div>