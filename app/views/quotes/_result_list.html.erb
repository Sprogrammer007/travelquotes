<div class="result_list_wrapper">
  <ul>
    <% if results %>
      <% results.each_with_index do |result, i| %>
      <li>
        <div class="row result_item_wrapper">

          <div class="col-sm-2 compare_box">
            <%= i + 1 %>
            <p>Compare</p>
            <%= check_box :compare, "results" %>
          </div>

          <div class="col-sm-3 logo_box">
            <%= image_tag result.logo %>
          </div>

          <div class="col-sm-3">
            <p><%= result.name %></p> 
            <p><%= result.products[0].name %></p> 
          </div>
          <div class="col-sm-2">
            <p> <%= link_to "Policy Details", "#" %></p> 
          </div>

          <div class="col-sm-2">
            <p>Your Quote</p>
            <p>$256.25</p>
            <%= link_to "Buy Now", "#", class: "btn btn-danger btn-sm" %>
          </div>
        </div>  
      </li>
      <% end %>
    <% else %>
      <p>No Filters Selected</p>
    <% end %>
  </ul>
</div>