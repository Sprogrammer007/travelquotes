<table class="compare_table table table-bordered">
  <tr>
    <% products.each do |p| %>
      <td class="content_td"><%= image_tag p.company.logo %></td>
    <% end %>
  </tr>
  <tr class="odd">   
    <% products.each do |p| %>
      <td class="content_td"><%= p.name %></td>
    <% end %>
  </tr>
  <tr>
    <% products.each do |p| %>
      <td class="content_td"><%= link_to "Buy Now", p.purchase_url(), class: "btn-danger compare_buy_now" %></td>
    <% end %>
  </tr>
  <tr class="odd">
    <% products.each do |p| %>
      <td class="content_td"><strong>Rate: <%= number_to_currency(p.rate) %></strong></td>
    <% end %>
  </tr>
  <tr> 
   <% products.each do |p| %>
      <td class="content_td"><strong>Dedutible of: <%= p.applied_ded %><strong></td>
    <% end %>
    </tr>
  <tr class="odd">
    <% products.each do |p| %>
      <td class="content_td">
        <% if quote.applied_filters%>
          <% p.get_legal_texts_by_filter(quote.product_filters, quote.quote_type).each do |l| %>
            <div class="accordion">
              <h3><%= l.legal_text_category.name %></h3>
              <div>
                <% if l.description %>
                  <%= l.description.html_safe() %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
        <% end %>
      </td>
    <% end %>
  </tr>

  <tr>
    <% products.each do |p| %>
      <td class="content_td">
        <% p.get_lts_after_filters(quote.quote_type).each do |l| %>
          <div class="accordion">
            <h3><%= l.legal_text_category.name %></h3>
            <div>
              <% if l.description %>
                <%= l.description.html_safe() %>
              <% end %>
            </div>
          </div>
        <% end %>
      </td>
    <% end %>
  </tr>


</table>