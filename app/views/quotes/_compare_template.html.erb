<table class="table table-bordered">
  <tr>
    <td>Company:</td>   
    <% products.each do |p| %>
      <td><%= image_tag p.company.logo %></td>
    <% end %>
  </tr>
  <tr>
    <td>Policy:</td>   
    <% products.each do |p| %>
      <td><%= p.name %></td>
    <% end %>
  </tr>

  <tr>
    <td>Rate:</td>   
    <% products.each do |p| %>
      <td><%= number_to_currency(p.rate) %></td>
    <% end %>
  </tr>

  <tr>
    <td>Policy Legals:</td>   
    <% products.each do |p| %>
      <td>
        <% p.legal_texts.each do |l| %>
          <div class="accordion">
            <h3><%= l.legal_text_category.name %></h3>
            <div>
              <% if l.description %>
                <%= l.description.html_safe() %>
              <% end %>
            </div>
          </div>
        <% end %>
      </td>
    <% end %>
  </tr>


</table>