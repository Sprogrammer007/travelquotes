<table class="compare_table table table-bordered">
  <tr>
    <% products.each do |p| %>
      <td class="content_td"><%= image_tag p.company.logo %></td>
    <% end %>
  </tr>
  <tr class="odd">   
    <% products.each do |p| %>
      <td class="content_td"><%= p.name %></td>
    <% end %>
  </tr>
  <tr>
    <% products.each do |p| %>
      <td class="content_td"><%= link_to "Buy Now", p.purchase_url(), class: "btn-danger compare_buy_now" %></td>
    <% end %>
  </tr>
  <tr class="odd">
    <% products.each do |p| %>
      <td class="content_td"><strong>Rate: <%= number_to_currency(p.rate) %></strong></td>
    <% end %>
  </tr>
  <tr> 
   <% products.each do |p| %>
      <td class="content_td"><strong>Dedutible of: <%= p.applied_ded %><strong></td>
    <% end %>
    </tr>
  <tr class="odd">
    <td class="content_td" colspan="<%=  products.count.to_s  %>" data-products="<%= "#{products.map(&:id).join(",")}" %>">
      <% if quote.applied_filters%>
      
      <%= select_tag "applied_filters_legal_texts", options_for_select(LegalTextCategory.get_legal_texts_by_filter(quote.product_filters, quote.quote_type)), class: "form-control", id: "applied_filters_legal_texts", prompt: "Please Select The Legal Text For Comparing", data: {url: compare_legals_quote_path(type: "not_filtered") } %>
      <% end %>
    </td>

  </tr>
  <tr class="not_filtered">
    <td class="content_td" colspan="<%= products.count.to_s  %>">
        No Legal Text Comparison Selected Yet
    </td>
  </tr>
  <tr class="odd">
    <td class="content_td" colspan="<%=  products.count.to_s  %>" data-products="<%= "#{products.map(&:id).join(",")}" %>">
      <% if quote.applied_filters%>
      
      <%= select_tag "compare_legal_texts", options_for_select(LegalTextCategory.get_lts_after_filters(quote.quote_type), " "), class: "form-control", id: "compare_legal_texts", prompt: "Please Select The Legal Text For Comparing", data: {url: compare_legals_quote_path(type: "filtered") }  %>
      <% end %>
    </td>

  </tr>
  <tr class="filtered">
    <td class="content_td" colspan="<%= products.count.to_s  %>">
        No Legal Text Comparison Selected Yet
    </td>

  </tr>


</table>