<% if product %> 
  <div class="modal-dialog">
 
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= product.name %> Details</h4>
      </div>
      <div class="modal-body">
        <div class="row rate-body">
          <div id="rate" data-ratetype="Daily" data-rate="<%= rate %>">
            <%= rate %>
          </div>
          <p>Currently Show Rates For <span class="number_dates"></span></p>
        </div>
        <div class="row buy-body odd">
          <div style="text-align: center;">
            <div class="btn-group">
              <div class="btn btn-default">
                <%= link_to(raw("<span class='glyphicon glyphicon-file'></span> Policy PDF"), product.pdf.url()) %>
              </div> 
              <div class="btn btn-danger">
              <%= link_to "Buy Now", product.purchase_url() %>
              </div>
            </div>
          </div>
        </div>
        <div class="row deductible-body ">
          <%= label_tag "legal_texts", "Select Legal Texts:" %>
          <%= select_tag "details_legal_text", grouped_options_for_select(StudentLgCat.map_by_parent()), class: "form-control details_legal_text", id: "details_legal_text", prompt: "Please Select Legal Text For Comparing", data: {url: compare_legals_student_quote_path() } %>
          <% product.student_legal_texts.each do |l| %>
            <input type="hidden" class="cat_id_eq_<%= l.student_lg_cat_id %>" data-texts='<%= l.description.html_safe() %>'>
          <% end %>
        </div>

        <div class="row legal_text_body odd">
          
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>  
      </div>
    </div>
  </div>
<% end %>